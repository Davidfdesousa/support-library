{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./packages",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "packages/ui/turbo"]
}