{
  "name": "@support-library/ui",
  "version": "0.1.0",
  "private": false,
  "main": "dist/index.cjs.js",
  "types": "dist/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": "./dist/components/*",
    "./react": {
      "import": "./src/react/components.ts"
    },
    "./angular": {
      "import": "./src/angular/directives/index.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && stencil build",
    "dev": "vite",
    "build:stencil": "stencil build",
    "start:stencil": "stencil build --dev --watch"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@stencil/angular-output-target": "^0.10.2",
    "@stencil/core": "^4.29.1",
    "@stencil/react-output-target": "0.6.0",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  }
}
