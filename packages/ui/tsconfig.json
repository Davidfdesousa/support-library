{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "composite": true,
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["turbo", "**/*.test.ts", "**/*.spec.ts"]
}
